<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/first_part"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/back2">


    <ImageView
        android:id="@+id/imgComp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="right"
        android:layout_margin="24dp"
        android:alpha="0.7"
        android:src="@drawable/comp1" />

    <ImageView
        android:id="@+id/imgSkate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="80dp"
        android:layout_marginTop="48dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/skate1" />

    <TextView
        android:id="@+id/txtSkateName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@+id/imgSkate"
        android:layout_alignBottom="@+id/imgSkate"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="bottom|center_horizontal"
        android:text="Element"
        android:textAllCaps="true"
        android:textColor="#7CEA87"
        android:textSize="48sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        android:id="@+id/second_part"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/txtFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center"
            android:text="asdfasjhdfaj"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtFullInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center"
            android:text="asdfhalkshjdfalkjhfdlkhlhgkjghjahsldkjhalksjhflkajhslfkjaf"
            android:textSize="16sp"
            />
    </LinearLayout>


</RelativeLayout>
